{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "outDir": "./dist",
        "module": "ES2020",
        "moduleResolution": "node",
        "declaration": true,
        "strict": false,
        "target": "ES2020"
    },
    "include": [
        "./source/**/*"
    ],
    "exclude":[
        "./node_modules"
    ]
}
